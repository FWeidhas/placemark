<form class="box" action="/poi/{{poi._id}}/editdetails/{{poi.details._id}}" method="POST">
  <div class="field">
    <label class="label">Edit Point of Interest Details:</label>
    <div class="control">
      <textarea class="textarea" placeholder="Enter Description" name="description"></textarea>
    </div>
  </div>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Latitude" name="latitude">
        </div>
      </div>
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Enter Longitude" name="longitude">
        </div>
      </div>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button class="button is-primary">Edit Details</button>
    </div>
  </div>
</form>
